<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp">

    <ImageView
        android:id="@+id/photoGrid"
        android:layout_width="0dp"
        android:layout_height="180dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:background="@color/white"
        android:foreground="@drawable/product_image_frame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/productControlLayout"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@+id/photoGrid"
        app:layout_constraintEnd_toEndOf="@+id/photoGrid" >

        <TextView
            android:id="@+id/productReduce"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:text="-"
            android:textAlignment="center"

            android:background="@drawable/product_amount_frame"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/cartProductAmount"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:background="@drawable/product_amount_frame"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/productAdd"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:text="+"
            android:background="@drawable/product_amount_frame"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:backgroundTint="@color/white"
        android:textSize="16sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textAlignment="center"
        android:scaleType="centerCrop"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/photoGrid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="16sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textAlignment="center"
        android:scaleType="centerCrop"
        android:textStyle="normal"
        app:layout_constraintTop_toBottomOf="@+id/price"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
