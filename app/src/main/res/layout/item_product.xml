<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="220dp"
    android:layout_margin="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/photoGrid"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:background="@color/white"
        android:layout_margin="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/productAdd"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:text="+"
        android:textSize="12sp"
        android:background="#00000000"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="@id/photoGrid"
        app:layout_constraintStart_toEndOf="@id/cartProductAmount"
        app:layout_constraintTop_toTopOf="@id/photoGrid"
        app:layout_constraintBottom_toBottomOf="@id/cartProductAmount"/>


    <TextView
        android:id="@+id/cartProductAmount"
        android:layout_width="30dp"
        android:layout_height="30dp"

        android:backgroundTint="@color/white"
        android:scaleType="centerCrop"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/productAdd"
        app:layout_constraintStart_toEndOf="@id/productReduce"
        app:layout_constraintTop_toTopOf="@id/photoGrid"
        app:layout_constraintBottom_toBottomOf="@id/productAdd"/>


    <Button
        android:id="@+id/productReduce"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:text="-"
        android:backgroundTint="@color/white"
        android:textSize="12sp"
        android:background="#00000000"
        android:scaleType="centerCrop"
        android:layout_marginStart="100dp"
        app:layout_constraintEnd_toStartOf="@id/cartProductAmount"
        app:layout_constraintTop_toTopOf="@id/photoGrid"
        app:layout_constraintStart_toStartOf="@id/photoGrid"
        app:layout_constraintBottom_toBottomOf="@id/productAdd"/>


    <TextView
        android:id="@+id/price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"

        android:backgroundTint="@color/white"
        android:textSize="16sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textAlignment="center"
        android:scaleType="centerCrop"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/photoGrid"
        app:layout_constraintEnd_toEndOf="@id/photoGrid"
        app:layout_constraintTop_toBottomOf="@id/photoGrid" />


    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="4dp"
        android:textSize="16sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textAlignment="center"
        android:scaleType="centerCrop"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@id/photoGrid"
        app:layout_constraintEnd_toEndOf="@id/photoGrid"
        app:layout_constraintTop_toBottomOf="@id/price" />





</androidx.constraintlayout.widget.ConstraintLayout>